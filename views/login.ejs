<div class='background'>
    <div class="login_container">
        <div class='grid-x login_form_container'>
            <div class='cell small-12 medium-6 large-6 login_apresentation'>
                <div class='apresentation'>
                    <p class='pe'> Bem vindo ao College! </p>
                    <p class='pv'> O college é uma plataforma na qual o estudante pode encontrar ajuda em matérias escolares!
                    Venha nos conhecer e contribuir !!</p>
                    <a class='link_login' href='/register'> Cadastrar... </a>
                </div>
            </div>
            <div class='cell small-12 medium-6 large-6 login_form'>
                <p><% include ./partials/messages %></p>
                <form action='/user/login' method='post'>
                    <div class='input_container'>
                        <label id='idemail' for='email'> Email </label>
                        <input type='email' id='email' name='email' placeholder="E-mail"/>
                    </div>
                    <div class='input_container'>
                        <label id='idsenha' for='senha'> Senha </label>
                        <input type='password' id='password' name='password' placeholder="Senha"/>
                    </div>
                    <a href='/user/updatesenha' class='link_senha'> Esqueci a senha </a>
                    <button type='submit' class='btn_form_submit'>Entrar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('#email').focus(()=>{
        $('#idemail').css('font-size', '0.6rem');
    });

    $('#email').focusout(()=>{
        $('#idemail').css('font-size', '0.9rem');
    });

    $('#password').focus(()=>{
        $('#idsenha').css('font-size', '0.6rem');
    });

    $('#password').focusout(()=>{
        $('#idsenha').css('font-size', '0.9rem');
    });
</script>